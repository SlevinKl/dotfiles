// Placer vos combinaisons de touches dans ce fichier pour remplacer les valeurs par d√©fautauto[]
[
    {
        "key": "ctrl+cmd+c",
        "command": "workbench.panel.chatSidebar.copilot"
    },
    {
        "key": "ctrl+cmd+i",
        "command": "-workbench.panel.chatSidebar.copilot"
    },
    {
        "key": "ctrl+shift+v",
        "command": "pasteAndIndent.action",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "cmd+shift+v",
        "command": "pasteAndIndent.action",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+`",
        "command": "-erb.toggleTags",
        "when": "editorTextFocus && editorLangId == 'erb'"
    },
    {
        "key": "shift+cmd+a",
        "command": "erb.toggleTags"
    },
    {
        "key": "cmd+s left",
        "command": "workbench.action.splitEditorLeft"
    },
    {
    "key": "cmd+s right",
    "command": "workbench.action.splitEditorRight"
    },
    {
        "key": "cmd+s down",
        "command": "workbench.action.splitEditorDown"
    },
    {
        "key": "cmd+k ctrl+shift+alt+cmd+[Period]",
        "command": "-workbench.action.splitEditorDown"
    },
    {
        "key": "cmd+s up",
        "command": "workbench.action.splitEditorUp"
    },
    {
        "key": "cmd+k ctrl+shift+alt+cmd+[Period]",
        "command": "-workbench.action.splitEditorUp"
    },
    {
        "key": "cmd+k ctrl+shift+alt+cmd+[Period]",
        "command": "-workbench.action.splitEditorRight"
    },
    {
        "key": "cmd+k ctrl+shift+alt+cmd+[Period]",
        "command": "-workbench.action.splitEditorLeft"
    }
]
